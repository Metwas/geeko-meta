{
       "compilerOptions": {
              "module": "nodenext",
              "target": "esnext",
              "outDir": "dist",
              "lib": [
                     "ESNext"
              ],
              "removeComments": true,
              "declaration": true,
              "emitDecoratorMetadata": true,
              "experimentalDecorators": true,
              "resolveJsonModule": false,
       },
       "exclude": [
              "node_modules",
              "dist",
              "build"
       ],
       "include": [
              "src",
       ],
}